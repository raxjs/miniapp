<%_ const isSSR = projectFeatures.includes('ssr') -%>
<%_ const isServerless = projectFeatures.includes('serverless') -%>
{
  "plugins": [
    [
      "build-plugin-rax-app",
      {
        "targets": [<%_ if (scaffoldType === 'lite') { -%>"web"<%_ } else { -%>"<%- projectTargets.join('", "') %>"<%_ } -%>]
      }
    ]<%_ if (isServerless) { -%>,<%_ } %>
    <%_ if (isServerless) { -%>
    [
      "build-plugin-rax-faas",
      {
        "aliyunConfig": {
          "id": "<%= projectAliyunId %>",
          "region": "<%= projectServerlessRegion %>"
        },
        "functionGroup": {
          "name": "raxFaaS",
          "root": "src/api",
          "functions": {
            "user": {
              "path": "user"
            }
          }
        }
      }
    ]<%_ } -%><%_ if (isSSR) { -%>,<%_ } %>
    <%_ if (isSSR) { -%>
    "build-plugin-rax-ssr"
    <%_ } -%>
  ]
}
