<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Rax mutiple pages app</title>
  <style>
    .btn {
      display: inline-block;
      padding: 1px 7px;
      border: 1px solid #ddd;
      cursor: pointer;
      text-decoration: none;
      color: #000;
      margin-top: 8px;
      margin-right: 8px;
    }
    .btn:hover {
      color: #f29718;
    }
  </style>
</head>

<body>
  <h1>Rax mutiple pages app</h1>
  <%_ if (entries.length) { -%>
  <h3>Page list</h3>
  <ul>
    <% entries.forEach(function(entry){ %>
    <li>
      <div>/pages/<%= entry.entryName %></div>
      <%_ if (hasWeb) { -%>
        <a class="btn" href="/pages/<%= entry.entryName %>" target="_blank">Web Preview</a>
      <%_ } -%>
      <%_ if (hasWeex) { -%>
        <a class="btn" href="/weex/<%= entry.entryName %>.js?wh_weex=true" target="_blank">Weex Preview</a>
      <%_ } -%>
    </li>
    <% }); %>
  </ul>
<%_ } -%>
</body>
</html>
