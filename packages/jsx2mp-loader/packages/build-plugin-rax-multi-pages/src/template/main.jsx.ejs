<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Rax mutiple pages app</title>
  <style>
    body {
      text-align: center;
    }
    .logo {
      width: 150px;
      margin: 70px auto 10px;
    }
    .pagelist {
      margin: 20px auto;
      padding: 10px;
      max-width: 700px;
      border: 1px solid #efefef;
      border-radius: 2px;
    }
    .title {
      margin-bottom: 10px;
    }
    .h2 {
      margin: 10px;
    }
    ul, li {
      margin: 0;
      padding: 0;
      display: block;
    }
    li {
      text-align: left;
      border-bottom: 1px solid #efefef;
      padding: 10px;
      margin-bottom: 10px;
    }
    .btn {
      display: inline-block;
      padding: 0 15px;
      height: 32px;
      line-height: 32px;
      cursor: pointer;
      background-color: #f29718;
      color: #fff;
      border-radius: 16px;
    }
  </style>
  <script>
    function openUrl(url){
      if (location.search == '?target=_self') {
        location.replace(url);
      } else {
        window.open(url);
      }
    }
  </script>
</head>

<body>
  <img class="logo" src="//gw.alicdn.com/tfs/TB1MRC_cvb2gK0jSZK9XXaEgFXa-1701-1535.png">
  <h1>Rax mutiple pages app</h1>
  <%_ if (entries.length) { -%>
  <div class="pagelist">
    <ul>
      <% entries.forEach(function(entry){ %>
      <li>
        <div class="title">/pages/<%= entry.entryName %></div>
        <%_ if (hasWeb) { -%>
          <button type="button" class="btn" onclick="openUrl('/pages/<%= entry.entryName %>')">Web Preview</button>
        <%_ } -%>
        <%_ if (hasWeex) { -%>
          <button type="button" class="btn" onclick="openUrl('/weex/<%= entry.entryName %>.js?wh_weex=true')">Weex Preview</button>
        <%_ } -%>
      </li>
      <% }); %>
    </ul>
  </div>
<%_ } -%>
</body>
</html>