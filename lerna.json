{
  "version": "1.7.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-lockfile"]
    },
    "publish": {
      "skipGit": true,
      "allowBranch": "master",
      "ignoreChanges": [
        "*.md"
      ]
    }
  }
}
